<%= form_for(@state, html: { class: "form-horizontal" } ) do |f| %>
<fieldset>
  <legend>State</legend>
  <% if @state.errors.any? %>
  <div id="error-explanation">
    <h2><%= pluralize(@state.errors.count, "error") %> prohibited this state from being saved:</h2>

    <ul>
      <% @state.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="countrol-group">
  	<%= f.label :country_iso_code, class: "control-label" %><br />
  	<div class="controls">
  	  <%= f.text_field :country_iso_code %>
  	</div>
  </div>

  <div class="countrol-group">
  	<%= f.label :state_code, class: "control-label" %><br />
  	<div class="controls">
      <%= f.text_field :state_code %>
  	</div>
  </div>

  <div class="countrol-group">
  	<%= f.label :name, class: "control-label" %><br />
  	<div class="controls">
  	  <%= f.text_field :name %>
  	</div>
  </div>

  <div class="countrol-group">
  	<%= f.submit class: "btn btn-primary" %>
  </div>

</fieldset>
<!--form-->
<% end %>