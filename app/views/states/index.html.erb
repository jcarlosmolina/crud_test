<h1>States</h1>

<div class="row-fluid">
  <div class="span4 offset4">
    <table class="table table-stripped table-bordered table-condensed">
  	  <tr>
  	    <th>Country</th>
  	   	<th>Code</th>
  	   	<th>Name</th>
  	   	<th></th>
  	   	<th></th>
  	   	<th></th>
  	  </tr>
  	  <% @states.each do |state| %>
  	  <tr>
  	    <td><%= state.country_iso_code %></td>
  	    <td><%= state.state_code %></td>
  	    <td><%= state.name %></td>
  	    <td>
  	      <%= link_to state do %>
  	      <i class="icon-list"></i>
  	      <% end %>
  	    </td>
  	    <td>
  	      <%= link_to edit_state_path(state) do %>
  	      <i class="icon-edit"></i>
  	      <% end %>
  	    </td>
  	    <td>
  	      <%= link_to state, method: :delete, data: { confirm: 'Are you sure?' } do %>
  	      <i class="icon-remove"></i>
  	      <% end %> 
  	    </td>
  	  </tr>
      <% end %>
    </table>
 
    <br />
    <i class="icon-plus"></i>
    <%= link_to 'New State', new_state_path %>

  </div><!-- span4 -->
</div><!-- row-fluid -->